<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:background="@drawable/border_shadow">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/post_circle_avatar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/circle_background"
                    android:textSize="20dp"
                    android:text="A"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/post_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arnaud Yarga"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1001010101"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/post_visibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1001010101"
                android:textSize="12dp" />



            <TextView
                android:id="@+id/post_content"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Le cours de datamining est annulÃ©"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/delete_post_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_delete_forever_black_24dp"
                android:layout_gravity="right"
                android:visibility="gone"
                />

        </LinearLayout>




</LinearLayout>
