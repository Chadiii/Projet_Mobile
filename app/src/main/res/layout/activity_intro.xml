<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="14"
    tools:context=".activity.authentication.IntroActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/intro_viewpager_id"
        android:layout_width="match_parent"
        android:layout_weight="12"
        android:layout_height="0dp">

    </androidx.viewpager.widget.ViewPager>

    <Button
        android:layout_gravity="center"
        android:id="@+id/intro_start_btn_id"
        android:layout_width="150dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:text="get Started"
        android:textColor="#fff"
        android:visibility="invisible" />

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <TextView
            android:layout_gravity="center"
            android:id="@+id/intro_next_textview_id"
            android:layout_width="0dp"
            android:layout_weight="4.1"
            android:layout_height="wrap_content"
            android:drawableRight="@color/white"
            android:drawableTint="@color/design_default_color_primary_dark"
            android:gravity="end"
            android:textAlignment="gravity"
            android:text=" N E X T "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="37sp" />


    </LinearLayout>





</LinearLayout>